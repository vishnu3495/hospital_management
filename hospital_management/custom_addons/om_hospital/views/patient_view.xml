<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="blood_id" domain="[('blood_group','!=','A+')]"/>
                <field name="doctor_detail_id"/>
                <field name="doctor_ids" widget="many2many_tags"/>
                <field name="date"/>
                <field name="datetime"/>
                <field name="completed"/>
                <field name="appointment_count"/>
                <field name="remarks"/>

            </tree>
        </field>
    </record>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_submit" name="action_submit" string="Submit" class="btn-success" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="blood_id" domain="[('blood_group','!=','A+')]"/>
                        </group>
                        <group>
                            <field name="doctor_ids" widget="many2many_tags"/>
                            <field name="doctor_detail_id"/>
                            <field name="date"/>
                            <field name="datetime"/>
                            <field name="completed"/>
                            <field name="appointment_count"/>
                            <field name="remarks"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="blood_id"/>
                <field name="doctor_detail_id"/>
                <field name="doctor_ids"/>
                <field name="date"/>
                <field name="datetime"/>
                <field name="completed"/>
                <field name="appointment_count"/>
                <field name="remarks"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="kanban_details">
                                <ul>
                                    <li>
                                        Name:
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        Age:
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        Gender:
                                        <field name="gender"/>
                                    </li>
                                    <li>
                                        BloodGroup:
                                        <field name="blood_id" domain="[('blood_group','!=','A+')]"/>
                                    </li>
                                    <li>
                                        Doctor:
                                        <field name="doctor_detail_id"/>
                                    </li>
                                    <li>
                                        Doctor:
                                        <field name="doctor_ids" widget="many2many_tags"/>
                                    </li>
                                    <li>
                                        Date:
                                        <field name="date"/>
                                    </li>
                                    <li>
                                        Date/Time:
                                        <field name="datetime"/>
                                    </li>
                                    <li>
                                        Completed:
                                        <field name="completed"/>
                                    </li>
                                    <li>
                                        Appointment Count:
                                        <field name="appointment_count"/>
                                    </li>
                                    <li>
                                        Remarks:
                                        <field name="remarks"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="name"/>
                <field name="doctor_detail_id"/>
                <filter string="Male" name="male" domain="[('gender','=','male')]"/>
                <filter string="Female" name="female" domain="[('gender','=','female')]"/>
                <filter string="Others" name="other" domain="[('gender','=','other')]"/>
                <group expand="1" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    <filter string="Patient Name" name="name" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>


</odoo>